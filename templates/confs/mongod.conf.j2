# mongod.conf

# for documentation of all options, see:
#   http://docs.mongodb.org/manual/reference/configuration-options/

# Where and how to store data.
storage:
  dbPath: /var/lib/mongodb
  journal:
    enabled: true
  engine: wiredTiger
{% if transaction_method is defined %}
  wiredTiger:
      engineConfig:
          configString: "transaction_sync=(enabled=true,method=fsync),checkpoint=(wait=600,log_size=0),eviction=(threads_max=16, threads_min=8)"
{% else %}
  wiredTiger:
      engineConfig:
          configString: "checkpoint=(wait=600,log_size=0),eviction=(threads_max=16, threads_min=8)"
{% endif %}

#  mmapv1:
#  wiredTiger:

# where to write logging data.
systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log

  # to log every query
  # component:
  #    query:
  #       verbosity: 2
  #    command:
  #       verbosity: 1

# network interfaces
net:
  port: 27017
  bindIp: 0.0.0.0


